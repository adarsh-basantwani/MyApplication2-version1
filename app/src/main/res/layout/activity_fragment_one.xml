<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context=".contact"
    >
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/messImageview"/>
    <ImageView
        android:id="@+id/messImageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/f1"
        android:layout_above="@id/mess_det"
        />
    <LinearLayout
        android:id="@+id/mess_det"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/nameofmess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="35dip"
                android:fontFamily="@font/lobsterregular"
                android:id="@+id/messName"
                tools:text="MessName"
                android:background="@color/white"
                android:paddingTop="20dp"

                />
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">
    <ImageView

        android:id="@+id/type"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/service_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="50dp"
       />

    <TextView
        android:id="@+id/rates"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#f1f1f1"
        android:textSize="20dip"
        android:textStyle="bold"
        android:background="@android:color/holo_green_dark"
        tools:text="1200/-" />
</LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="25dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
           >
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Menu "
                    android:textColor="@color/grayDarkColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Menus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:text="Menus" />
            </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:textSize="15sp"
                    android:textColor="@color/grayDarkColor"
                    android:text="Feast "
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/feast"
                    tools:text="Feast"
                    />
            </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/grayDarkColor"
                    android:text="Guest Tiffin Charges"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/guestTiffinCharges"
                    tools:text="guestTiffinCharges"
                    />
            </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:textSize="15sp"
                    android:textColor="@color/grayDarkColor"
                    android:text="Owner"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/messOwner"
                    tools:text="messOwner"
                    />
            </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/grayDarkColor"
                    android:text="Remarks "
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/remarks"
                    tools:text="remarks"
                    />
            </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/veiw_contact"
        android:text="View Contact"
        android:background="#FF6F00"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAllCaps="true"/>
    <Button
        android:id="@+id/add_to_fav"
        android:text="Add to favourate"
        android:background="#E65100"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAllCaps="true"/>
</LinearLayout>
</RelativeLayout>