<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@drawable/food1">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignIn"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/mess" />
        <TextView
            android:id="@+id/textView2"
            android:background="@drawable/outline_button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:lineSpacingMultiplier="1"
            android:text="Messdekho is an app which acts as a bridge between the students and working professionals in search of an affordable place to feed their hunger and the food providers who provide food in a pocket friendly rate."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:fontFamily="@font/lobsterregular" />


        <TextView
            android:id="@+id/textView4"
            android:background="@drawable/outline_button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_marginTop="5dp"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:lineSpacingMultiplier="1"
            android:text="Messdekho is a platform for small business owners who provide good food at an affordable rate to get their businesses going by providing them a platform to advertise themselves without being heavy on their pockets.
"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lobsterregular" />

        <TextView
            android:id="@+id/textView5"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:lineSpacingMultiplier="1"
            android:text="Co-Founder"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:fontFamily="@font/audiowideregular" />

        <TextView
            android:id="@+id/textView6"
            android:background="@drawable/outline_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:lineSpacingMultiplier="1"
            android:text="Yamin Lakadkutta\n
Abhinav Welankiwar\n
Shubham Gadekar\n
Subodh Latkar
"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="19dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lobsterregular" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>